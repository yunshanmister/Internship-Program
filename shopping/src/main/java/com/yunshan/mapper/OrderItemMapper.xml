<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunshan.mapper.OrderItemMapper">
	
    <select id="getOrderItemByOrderId" resultMap="getMap">
       select * from ec_order_item where order_id = #{orderId}
    </select>
   
     <resultMap type="com.yunshan.pojo.OrderItem" id="getMap">
         <result column="order_num" property="orderNum"/>
         <association property="article" column="article_id" select="com.yunshan.mapper.ArticleMapper.getArticleById"></association>
     </resultMap>
   
</mapper>